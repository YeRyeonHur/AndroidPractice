<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchResultItemBaseLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/searchResultItemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchResultItemTitle"
        android:layout_width="214dp"
        android:layout_height="46dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/searchResultItemImage"
        app:layout_constraintTop_toTopOf="@+id/searchResultItemImage" />

    <TextView
        android:id="@+id/searchResultItemRating"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:gravity="start|left|center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/searchResultItemTitle"
        app:layout_constraintTop_toBottomOf="@+id/searchResultItemTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>